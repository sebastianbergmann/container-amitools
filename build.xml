<?xml version="1.0" encoding="UTF-8"?>
<project name="docker-amitools" default="build">
    <target name="build">
        <exec executable="docker" taskname="docker">
            <arg value="build"/>
            <arg value="--ulimit"/>
            <arg value="nofile=1024"/>
            <arg value="--tag"/>
            <arg value="sebastianbergmann/amitools:latest"/>
            <arg path="${basedir}"/>
        </exec>
    </target>
</project>

